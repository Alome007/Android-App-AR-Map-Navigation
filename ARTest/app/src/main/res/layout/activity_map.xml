<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_styleUrl="mapbox://styles/mapbox/streets-v10"
        mapbox:mapbox_cameraTargetLat="1.294759"
        mapbox:mapbox_cameraTargetLng="103.774045"
        mapbox:mapbox_cameraZoom="18"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floor_level_buttons"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:background="@color/mapbox_blue">


        <Button
            android:id="@+id/second_level_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/turquoise"
            android:text="2"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/first_level_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/turquoise"
            android:text="1"
            android:textColor="@android:color/black" />

        <!--android:background="?android:attr/selectableItemBackground"-->
        <Button
            android:id="@+id/zero_level_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/turquoise"
            android:text="B1"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/start_route_buttton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#5ae5e8"
            android:enabled="true"
            android:text="GO"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/start_AR_buttton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#5ae5e8"
            android:enabled="true"
            android:text="AR"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />


        <Button
            android:id="@+id/get_location_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/my_location"
            />
        <!--android:background="#5ae5e8"-->

    </LinearLayout>


    <!--TODO: instead of the "Scanning wifi"-->
